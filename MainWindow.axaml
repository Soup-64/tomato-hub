<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:application="clr-namespace:avalonia_rider_test"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        xmlns:global="clr-namespace:"
        
        Position="0,0"
        Width="1024"
        Height="600"
        WindowState="Normal"
        SystemDecorations="None"
        
        x:Class="avalonia_rider_test.MainWindow"
        FontSize="18"
        FontFamily="Noto Sans"
        FontWeight="Normal"
        SizeToContent="Manual"

        Title="avalonia_rider_test">
    
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#EDDDD4"/>
        </Style>
    </Window.Styles>

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="50,*">

        <Grid
            ColumnDefinitions="60,*,*,60"
            RowDefinitions="*"
            Background="#283D3B">
            <Button
                Foreground="#EDDDD4"
                Background="#C44536"
                Grid.Column="0"
                Name="Back"
                Click="backClick"
                Width="50"
                HorizontalAlignment="Left"
                FontSize="20"
                Margin="0"
                Content="↵">
            </Button>
            
            <Label
                Foreground="#EDDDD4"
                Grid.Column="1"
                IsEnabled="False"

                Name="DateTime"
                Content=""
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Left"
                Height="50"
                FontSize="28">
            </Label>
            
            <Label
                Foreground="#EDDDD4"
                Grid.Column="2"
                IsEnabled="False"

                Name="StatusTxt"
                Content="ok"

                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Right"
                Height="50"
                FontSize="28">
            </Label>

            <Button Foreground="#EDDDD4"
                    FontSize="20"
                    Background="#C44536"
                    Grid.Column="3"
                    Width="50"
                    HorizontalAlignment="Right"
                    Click="sleepClick"
                    Content="⏾">
            </Button>
        </Grid>

        <Carousel
            x:Name="Switcher"
            Grid.Column="0"
            Grid.Row="1">
            <application:MainMenu />
            <application:WeatherMenu />
            <application:SmartMenu />
        </Carousel>
    </Grid>
</Window>