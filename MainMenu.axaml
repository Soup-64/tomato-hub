<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avalonia_rider_test.MainMenu">

    <Grid
        ColumnDefinitions="*,*,*"
        RowDefinitions="*,*,*"
        >

        <Button
            Grid.Column="0"
            Grid.Row="0"
            Name="Weather"
            Click="weather_Click"
            ClickMode="Release"
            Margin="25"
            
            Content="Weather">
        </Button>

        <Button
            Grid.Column="1"
            Grid.Row="1"
            Name="Sound"
            Click="button_Click"
            ClickMode="Release"
            Margin="25"

            Content="Sound Test">
        </Button>

        <Button
            Grid.Column="1"
            Grid.Row="2"
            DockPanel.Dock="Bottom"
            Name="Quit"
            Click="quit_Click"
            Margin="25"
            ClickMode="Release"

            Content="Quit Application">
        </Button>
    </Grid>

</UserControl>